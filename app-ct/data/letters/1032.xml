                        <placeName ref="pldb.xml#pl0703">NORTHOP</placeName>
                    </stamp>
                    <address>
                    <addrLine>
                            <persName ref="pe0313">Richard Bull <choice>
                                    <abbr>esq<hi rend="superscript">r</hi>
                                    </abbr>
                                    <expan>esquire</expan>
                                </choice>
                            </persName> | <placeName ref="pldb.xml#pl0758">Stratton Street Piccadilly | London</placeName>
                        </addrLine>
                    </address>
                </p>
            </div>
